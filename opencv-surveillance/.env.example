# Copy this to .env and fill in your values
# Note: Admin account is created through the first-run setup wizard in the UI
# No need to configure admin credentials here!

# Security (REQUIRED)
SECRET_KEY=your-secret-key-change-in-production
JWT_SECRET_KEY=your-jwt-secret-key-change-in-production

# Database (optional - defaults to SQLite)
# DATABASE_URL=postgresql://openeye:password@postgres:5432/openeye
# POSTGRES_PASSWORD=changeme

# Email Notifications (Optional - FREE with Gmail)
# Leave empty to disable email alerts
SMTP_HOST=smtp.gmail.com
SMTP_PORT=587
SMTP_USERNAME=your-email@gmail.com
SMTP_PASSWORD=your-app-password
SMTP_FROM_ADDRESS=your-email@gmail.com

# Telegram Bot (Optional - FREE!)
# Leave empty to disable Telegram alerts
TELEGRAM_BOT_TOKEN=
TELEGRAM_CHAT_ID=

# Twilio SMS (Optional - Paid service)
# Leave empty to disable Twilio SMS
TWILIO_ACCOUNT_SID=
TWILIO_AUTH_TOKEN=
TWILIO_FROM_NUMBER=

# ntfy.sh Push Notifications (Optional - FREE!)
# Leave empty to disable ntfy.sh push notifications
NTFY_TOPIC=
NTFY_SERVER=https://ntfy.sh

# Firebase Push Notifications (Optional - FREE tier available)
# Leave empty to disable Firebase push notifications
FIREBASE_CREDENTIALS_PATH=/app/config/firebase-credentials.json

# Google Nest Integration
NEST_PROJECT_ID=
NEST_CLIENT_ID=
NEST_CLIENT_SECRET=

# AWS S3 Cloud Storage
AWS_ACCESS_KEY_ID=
AWS_SECRET_ACCESS_KEY=
AWS_S3_BUCKET=
AWS_REGION=us-east-1

# Application Settings
LOG_LEVEL=INFO
ENABLE_FACE_RECOGNITION=true
MAX_RECORDING_DURATION=300
